<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.askee.android.nikreader"
	android:versionCode="1"
	android:versionName="1.0" >

	<uses-sdk
		android:minSdkVersion="14"
		android:targetSdkVersion="19" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name="com.askee.android.nikreader.MainActivity"
			android:label="@string/title_activity_main" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="com.askee.android.nikreader.ChooseDirectoryActivity"
			android:label="@string/title_activity_choose_directory" >
		</activity>
		<activity
			android:name="com.askee.android.nikreader.ReaderActivity"
			android:label="@string/title_activity_reader" >
		</activity>
	</application>

</manifest>
