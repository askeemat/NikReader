<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.askee.android.nikreader.ChooseDirectoryActivity"
	tools:ignore="MergeRootFrame" >

    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >

        <TextView
        	android:id="@+id/text_choose_directory"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_margin="5dp"
        	android:text="@string/message_choose_directory"
        	android:textSize="@dimen/directory_list_num_content_font_size" />

        <ListView
        	android:id="@+id/list_directory"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="5dp" >

        </ListView>

    </LinearLayout>

</FrameLayout>
